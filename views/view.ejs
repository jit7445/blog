
   
    <!DOCTYPE html>
    <html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Blog Post</title>
        <script src="https://kit.fontawesome.com/5eb1f5fa49.js" crossorigin="anonymous"></script>
        <!-- Include Tailwind CSS file -->
        <link href="/src/output.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    </head>
    
    <body class="bg-gray-100">
    
        <div class="container mx-auto px-5 py-12">
            <div class="flex flex-wrap">
                <div class="w-full md:w-3/4 md:mx-auto">
                    <div class="flex flex-col bg-white border rounded-lg border-gray-200 p-8 shadow-md">
                        <div class="rounded-lg overflow-hidden mb-4">
                            <img alt="Content" class="object-cover object-center h-64 w-full"
                                src="<%= blog.coverImageURL %>">
                        </div>
                        <div class="flex-grow">
                            <h2 class="text-gray-900 text-2xl font-medium mb-4"><%= blog.title %></h2>
                            <p class="text-base leading-relaxed text-gray-700 mb-6"><%= blog.body %></p>
                        </div>
                        <div class="flex items-center justify-between mt-4">
                            <div class="flex items-center">
                                <img src="<%= blog.createdBy.profileImageURL %>"
                                    class="rounded-full h-12 w-12 mr-2" alt="Author Image">
                                <span class="text-gray-700"><%= blog.createdBy.fullName %></span>
                            </div>
                            <% if (locals.user) { %>
                                <form action="/blog/comment/<%= blog._id %>" method="post" class="space-x-4">
                                    <label for="content" class="sr-only">Comment</label>
                                    <input type="text" id="content" name="content"
                                        class="w-3/4 md:w-1/2 px-4 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring focus:ring-violet-300"
                                        placeholder="Type your comment here">
                                    <button type="submit"
                                        class="bg-blue-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue hover:bg-blue-600 active:bg-blue-800">
                                         Post Comment
                                    </button>
                                </form>
                            <% } %>
                        </div>
                        <div class="mt-4">
                            <% comments.forEach(comment => { %>
                                <div class="flex items-center mb-4">
                                    <img src="<%= comment.createdBy.profileImageURL %>"
                                        class="rounded-full h-12 w-12 mr-2" alt="Profile Image">
                                    <div class="flex flex-col">
                                        <span class="text-lg font-medium"><%= comment.createdBy.fullName %></span>
                                        <p class="whitespace-pre-line text-gray-700"><%= comment.content %></p>
                                    </div>
                                    <form action="/blog/delete/" method="post">
                                    <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded mt-4 ms-4">
                                        
                                            Delete
                                  
                                    </button>
                                </form>
                                    
                                </div>

                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
    </body>
    
    </html>
    